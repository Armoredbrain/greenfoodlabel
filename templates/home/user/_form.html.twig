<div class ="main-admin-container">
    <div class ="demands-step">
        <div class ="shop-name-step">
            <h4>{{ user.firstname}} {{ user.lastname }}</h4>
            {{ form_start(userForm) }}
            <div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        {{ form_label(userForm.firstname, 'Prénom') }}
                        {{ form_widget(userForm.firstname) }}
                    </div>
                    <div class="form-group col-md-6">
                        {{ form_label(userForm.lastname, 'Nom') }}
                        {{ form_widget(userForm.lastname) }}
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md">
                        {{ form_label(userForm.email, 'Email') }}
                        {{ form_widget(userForm.email) }}
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md">
                        {{ form_label(userForm.phone, 'Numéro de téléphone') }}
                        {{ form_widget(userForm.phone) }}
                    </div>
                </div>
                <button type="submit" class="btn btn-success button-edit">{{ button_label|default('Valider') }}</button>
            </div>
            {{ form_end(userForm) }}
        </div>
    </div>
</div>
