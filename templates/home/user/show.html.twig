{% extends 'home/user/layout.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
    <div class ="main-admin-container">
        <div class ="shop-name-step">
            <h4>{{ user.firstname}} {{ user.lastname }}</h4>
            <table class="table">
                <tbody>
                    <tr>
                        <th>Prénom</th>
                        <td>{{ user.firstname }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ user.lastname }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th>Téléphone</th>
                        <td>{{ user.phone }}</td>
                    </tr>
                </tbody>
            </table>
            <div class="row justify-content-around">
                <div>
                    <a href="{{ path('user_edit', {'id': user.id}) }}"><button type="submit" class="btn btn-success button-edit">Modifier</button></a>
                </div>
                <div>
                    <a href="{{ path('user_index') }}"><button type="submit" class="btn btn-success button-edit">Retour à l'accueil</button></a>
                </div>
                <div>
                    <a href="{{ path('delete_user') }}"><button type="submit" class="btn btn-success button-edit">Supprimer le compte</button></a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
