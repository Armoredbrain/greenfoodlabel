{% extends 'base.html.twig' %}

{% block title %}Green Label | Créer Un Compte{% endblock %}

{% block body %}
    <div class="massive-container">
        <div class="logo">
            <img src="{{ asset('build/logo.png') }}" height="200" width="200" alt="logo"/>
            <h1>Obtention du label Green Food</h1>
        </div>
        <div class="main-container-register">
            <div class="second-container">
                <h2>Créer un compte</h2>
            </div>
            <div class="leftRight-container">

                {{ form_start(registrationForm) }}

                <div class="left-container">

                    {{ form_label(registrationForm.lastname, 'Nom') }}
                    {{ form_widget(registrationForm.lastname) }}

                    {{ form_label(registrationForm.firstname, 'Prénom') }}
                    {{ form_widget(registrationForm.firstname) }}

                    {{ form_label(registrationForm.email.first, 'Email') }}
                    {{ form_widget(registrationForm.email.first) }}

                    {{ form_label(registrationForm.email.second, 'Confirmer l\'email') }}
                    {{ form_widget(registrationForm.email.second) }}

                </div>
                <div class="right-container">

                    {{ form_label(registrationForm.phone, 'Téléphone') }}
                    {{ form_widget(registrationForm.phone) }}

                    {{ form_label(registrationForm.plainPassword.first, 'Mot de passe') }}
                    {{ form_widget(registrationForm.plainPassword.first) }}

                    {{ form_label(registrationForm.plainPassword.second, 'Confirmer le mot de passe') }}
                    {{ form_widget(registrationForm.plainPassword.second) }}

                </div>
                <div class="third-container">
                    <button type="submit" class="btn btn-success button-login">Créer un compte</button>
                </div>
                <a href="{{ path('app_login') }}"><p class="login-account">Déjà un compte ? Se connecter</p></a>
            </div>
        </div>

        {{ form_end(registrationForm) }}

    </div>
{% endblock %}
